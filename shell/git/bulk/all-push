#!/usr/bin/env bash

set -e

# This is used for the Hang at the end, for disabling it.
SCRIPT_PATH=$(readlink -f "${BASH_SOURCE[0]}")

# Ask for commit message upfront
read -rp "Enter commit message (Enter to use 'auto-commit'): " commit_message
if [ -z "$commit_message" ]; then
    commit_message="auto-commit"
fi

for d in */; do
    if [ -d "$d/.git" ]; then
        echo "ℹ️  Pushing $d"
        (
            cd "$d" || exit
            git add . >/dev/null 2>&1
            if git diff --quiet && git diff --cached --quiet; then
                echo "✅ Nothing to commit: $d"
                exit 0
            fi
            if git commit -m "$commit_message" >/dev/null 2>&1; then
                if git push >/dev/null 2>&1; then
                    echo "✅ Successfully pushed $d"
                else
                    echo "❌ Failed to push $d"
                fi
            else
                echo "❌ Failed to commit $d"
            fi
        ) &
    fi
done

echo
wait

# Hang

KEEP_OPEN=true

if [ "$KEEP_OPEN" = true ]; then
    echo
    read -p "Press 'Enter' to exit / Type 'disable' to disable hanging (local only): " response
    if [ "$response" = "disable" ]; then
        sed -i 's/^KEEP_OPEN=true/KEEP_OPEN=false/' "$SCRIPT_PATH"
        echo
        echo "KEEP_OPEN set to false"
        echo "Change 'KEEP_OPEN=true' to enable"
        echo
        for i in {5..1}; do
            echo -n "Exiting in $i..."
            sleep 1
            echo -ne "\r"
        done
        echo "Exiting now.        "
    fi
fi
